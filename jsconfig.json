{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "Node",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@client/*": ["./src/client/*"],
            "@handlers/*": ["./src/handlers/*"],
            "@utils/*": ["./src/utils/*"]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
    },
    "include": ["src/**/*.js"],
    "exclude": ["node_modules"]
}